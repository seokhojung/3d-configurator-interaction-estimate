{
    "name":  "3d-configurator-interaction-estimate",
    "version":  "0.1.0",
    "private":  true,
    "description":  "Test infrastructure setup for unit/integration/E2E per Story 1.2",
    "engines":  {
                    "node":  ">=20 <23"
                },
    "scripts":  {
                    "test":  "npm run test:unit && npm run test:integration",
