                            "happy-dom":  "^20.0.10",
                            "jsdom":  "^27.0.1",
                            "next":  "^16.0.1",
                            "playwright":  "^1.0.0",
                            "react":  "^19.2.0",
                            "react-dom":  "^19.2.0",
                            "typescript":  "^5.0.0",
                            "vitest":  "^1.0.0"
                        },
    "dependencies":  {
